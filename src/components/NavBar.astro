---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
import HeaderTile from "../components/HeaderTile.astro";
---

<nav class="navbar">
    <div class="content">
        <a class="logo" href="/"> 
            <img src="/logo.svg" alt="Logo">
        </a>
        <div class="menu-button" onclick="handleToggleClick(this)">
            <img src="/links/menu.svg"/>
        </div>
        <div class="links">
            <a class={currentPath === "" ? "active" : ""} href="/">Home</a>
            <a class={currentPath === "blog" ? "active" : ""} href="/blog">Blog</a>
            <a class={currentPath === "projects" ? "active" : ""} href="/projects">Projects</a>
            <a class={currentPath === "resume" ? "active" : ""} href="/resume">Resume</a>
        </div>
    </div>
    <div id="mobileMenu" class="mobile-menu">
        <a class={currentPath === "" ? "active" : ""} href="/">Home</a>
        <a class={currentPath === "blog" ? "active" : ""} href="/blog">Blog</a>
        <a class={currentPath === "projects" ? "active" : ""} href="/projects">Projects</a>
        <a class={currentPath === "resume" ? "active" : ""} href="/resume">Resume</a>
    </div>
</nav>

<style>
    a {
        text-decoration: none;
    }

    .navbar {
        height: 100%;
        width: 100vw;
        background-color: #DEE2E6;
        margin-bottom: 45px;
    }

    .content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        
        margin: auto;
        max-width: 960px;
        height: 100%;
    }

    .active {
        /* font-weight: bold; */
        text-decoration: underline black 2px;
    }

    .links {
        display: flex;
        flex-direction: row;
        list-style: none;
    }

    .links a {
        font-size: 18px;
        margin-left: 40px;
        color: inherit;
    }

    .logo {
        display: flex;
        align-items: center;
        height: 50px;
    }

    .logo img {
        height: 50%;
    }

    .menu-button {
        display: none;
        justify-content: end;
        /* opacity: 0; */

        width: 50px;
        height: 100%;
    }

    .menu-button img {
        width: 60%;
    }

    .mobile-menu {
        display: none;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        padding: 20px 20px;
    }

    .mobile-menu a {
        color: black;
        font-size: 20px;
    }

    .open {
        display: flex;
    }

    @media only screen and (max-width: 1024px) {
        .content {
            max-width: 90%;
        }

        .navbar {
            margin-bottom: 20px;
        }
	}

    @media only screen and (max-width: 768px) {
        .links {
            display: none;
        }

        .menu-button {
            display: flex;
        }
	}
</style>
<script is:inline>
    const handleToggleClick = () => {
        document.getElementById("mobileMenu").classList.toggle('open');
    }
</script>
