---
interface Props {
    date: string;
    type: string;
    title: string;
    summary?: string;
    link?: string;
}

const { date, type, title, summary="", link=""} = Astro.props;
---

<li class="update">
    <p class="metadata">{date} - {type}</p>
    <a href={link} class="title">{title}</a>
    <!-- <p class="summary">{summary}</p> -->
</li>
<style>
    .update {
        list-style: none;
        width: 100%;
        /* margin-bottom: 20px; */
    }

    .update p {
        margin: 0;

    }

    .update a {
        font-size: 18px;;
    }

    .metadata {
        font-size: 14px;
    }

    .title {
        text-decoration: underline;
        font-weight: bold;
        color: black;

    }
</style>
