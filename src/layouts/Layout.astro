---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from 'astro:transitions';
---

<!doctype html> 
<html lang="en">
	<head>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta charset="UTF-8" />
		<meta name="description" content="The Personal Blog and Link Tree of Kevin" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: #343a40;
		--accent-light: #ADB5BD;
		--accent-dark: #495057;  
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	body {
		margin: 0;
		padding: 0;
	}

	html {
		font-family: system-ui, sans-serif;
		color: #343A40;
		background: #E9ECEF;
		-webkit-font-smoothing: antialiased;
  		-moz-osx-font-smoothing: grayscale;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	a {
       text-decoration: none;
	}

	main {
		display: flex;
        flex-wrap: wrap;

		gap: 20px;

		margin: auto;
		/* width: 50%; */
		width: 960px;

		line-height: 1.6;
	}

	.left {
		display: flex;
		gap: 20px;
		flex-direction: column;

		flex: 1 1 auto;
		max-width: calc((65% - 6 * 20px) + 4 * 20px);
	}

	.right {
		flex: 1 1 auto;
	}

</style>
